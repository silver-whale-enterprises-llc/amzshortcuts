{
  "manifest_version": 2,
  "name": "AMZ Shortcuts",
  "version": "1.0.0",
  "default_locale": "en",
  "description": "Time saving utilities for Amazon sellers.",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "24": "images/icon_24.png",
      "32": "images/icon_32.png"
    },
    "default_title": "AMZ Shortcuts",
    "default_popup": "popup.html"
  }
}
